{
  "buildCommand": "next build",
  "framework": "nextjs",
  "installCommand": "pnpm install",
  "regions": ["fra1"],
  "outputDirectory": ".next",
  "env": {
    "VERCEL_ENV": "production",
    "NODE_ENV": "production"
  },
  "crons": [
    {
      "path": "/api/cron/expire-trials",
      "schedule": "0 5 * * *"
    },
    {
      "path": "/api/cron/send-monthly-reminders",
      "schedule": "0 9 1-3 * *"
    }
  ]
} 