echo "üîç Running Mobile UX checks before commit..."

# Add common Node.js paths to ensure tools are available
export PATH="/opt/homebrew/bin:/usr/local/bin:/usr/bin:$PATH"

# Try to find pnpm in common locations
if command -v pnpm >/dev/null 2>&1; then
    pnpm test:mobile-quick
elif [ -f "/opt/homebrew/bin/pnpm" ]; then
    /opt/homebrew/bin/pnpm test:mobile-quick
elif [ -f "/usr/local/bin/pnpm" ]; then
    /usr/local/bin/pnpm test:mobile-quick
else
    echo "‚ùå pnpm not found. Please ensure pnpm is installed."
    exit 1
fi
